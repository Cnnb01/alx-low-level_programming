CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

#recompiling only updated source files
all: $(NAME)

#source files to object files
%.o: %.c
	$(CC) -c -Wall -g $< -o $@

#create executable from object files
$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ)

# Dependency rule to update object files when a source file changes
#$(OBJ): $(SRC)

# Clean rule to remove object files and the executable
clean:
	rm -f $(OBJ) $(NAME)

# Run the executable
#run:
#	./$(NAME)
